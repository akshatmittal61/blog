<%- include("partials/header") -%>

    <h1>Add New Post</h1>
    <form action="/add" method="post" class="add-form">
        <input type="text" name="title" id="title" placeholder="Title" required class="add-input-title">
        <textarea name="content" id="content" cols="30" rows="10" placeholder="Your Thoughts Here" class="add-input-content" required></textarea>
        <button type="submit" class="btn add-form-btn">Publish</button>
    </form>
    <%- include("partials/footer") -%>